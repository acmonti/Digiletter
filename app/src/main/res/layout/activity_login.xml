<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="10dp"
    tools:context="com.mlabs.bbm.digiletter.LoginActivity"
    android:background="@android:color/white"
    android:id="@+id/txtView_attempt">


    <EditText
        android:id="@+id/txt_EmailUName"
        android:hint="Username or Email"
        android:inputType="text"
        android:maxLength="32"
        android:textColorHint="#979797"
        android:width="250dp"
        android:textColor="#000000"
        android:textSize="16sp"
        android:background="@drawable/dl_userbg"

        android:layout_width="230dp"
        android:layout_height="32dp"
        android:layout_marginTop="90dp"
        android:layout_alignRight="@+id/btn_LogIn"
        android:layout_alignEnd="@+id/btn_LogIn"
        android:layout_toRightOf="@+id/PassWord"
        android:layout_toEndOf="@+id/PassWord"
        android:focusable="true" />

    <ImageView
        android:id="@+id/PassWord"
        android:layout_width="30dp"
        android:layout_height="34dp"
        android:src="@drawable/passwordline"
        android:layout_above="@+id/btn_LogIn"
        android:layout_alignLeft="@+id/btn_LogIn"
        android:layout_alignStart="@+id/btn_LogIn" />

    <EditText
        android:id="@+id/txt_PWord"
        android:hint="Password"
        android:inputType="textPassword"
        android:maxLength="16"

        android:textColor="#000000"
        android:textSize="16sp"
        android:ems="10"
        android:background="@drawable/dl_passwordbg"
        android:textColorHint="#979797"
        android:layout_below="@+id/txt_EmailUName"
        android:layout_width="200dp"
        android:layout_height="32dp"
        android:layout_marginTop="18dp"
        android:layout_alignRight="@+id/txt_EmailUName"
        android:layout_alignEnd="@+id/txt_EmailUName"
        android:layout_toRightOf="@+id/PassWord"
        android:layout_toEndOf="@+id/PassWord" />

    <TextView android:id="@+id/show_password"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"

        android:gravity="center"

        android:text="SHOW"
        android:textSize="12sp"
        android:textColor="#818181"
        android:layout_above="@+id/btn_LogIn"
        android:layout_alignRight="@+id/txt_PWord"
        android:layout_alignEnd="@+id/txt_PWord"
        android:layout_toEndOf="@+id/logoLogIn"
        android:layout_toRightOf="@+id/logoLogIn"
        android:layout_alignTop="@+id/txt_PWord" />

    <Button
        style="@style/Animation.AppCompat.Dialog"
        android:id="@+id/btn_LogIn"
        android:onClick="Login"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/txt_PWord"
        android:layout_centerHorizontal="true"

        android:layout_width="230dp"
        android:layout_height="30dp"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:text="LOGIN"
        android:background="@android:color/black"
        />

    <TextView android:id="@+id/link_signup"
        android:layout_below="@+id/btn_LogIn"
        android:layout_marginTop="25dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"

        android:gravity="center"

        android:text="No account yet? Create one."
        android:textSize="14sp"
        android:textColor="#818181"
        />

    <ImageView
        android:id="@+id/logoLogIn"
        android:layout_marginTop="110dp"
        android:layout_below="@+id/btn_LogIn"
        android:layout_centerHorizontal="true"

        android:layout_width="150dp"
        android:layout_height="120dp"
        android:src="@drawable/logo_comb"
        />

    <ImageView
        android:id="@+id/User"

        android:layout_width="30dp"
        android:layout_height="34dp"
        android:src="@drawable/userline"
        android:layout_alignBottom="@+id/txt_EmailUName"
        android:layout_alignLeft="@+id/PassWord"
        android:layout_alignStart="@+id/PassWord" />

</RelativeLayout>